// SPECIFIC WORKSPACE
{
	"version": "0.2.0",
	"configurations": [
	  {
		"name": "Extension with Specific Workspace",
		"type": "extensionHost",
		"request": "launch",
		"args": [
		  "--extensionDevelopmentPath=${workspaceFolder}",
		  "--folder-uri=C:\\Users\\thatc\\ProjectsPractice\\rust101",
		  "--folder-uri=C:\\Users\\thatc\\ProjectsPractice\\vscode_ext",
		],
		"outFiles": [
		  "${workspaceFolder}/dist/**/*.js"
		],
		"preLaunchTask": "${defaultBuildTask}"
	  }
	]
}


